{
    "version": 2,
    "functions": {
        "api/*.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "builds": [
        { 
            "src": "frontend/**",
            "use": "@vercel/static"
        },
        { 
            "src": "api/export.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/export",
            "dest": "api/export.js",
            "methods": ["POST", "OPTIONS"]
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}